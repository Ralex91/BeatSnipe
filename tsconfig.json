{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "paths": {
      "@/*": ["./src/*"],
      "@package": ["./package.json"]
    }
  },
  "exclude": ["dist", "tests"]
}
